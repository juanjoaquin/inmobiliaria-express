extends ./layout/app

block styles 
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido 
    div(class="py-5")
        h1(class="text-center text-4xl font-extrabold") Ubicaci√≥n en el Mapa

        div(class="flex flex-col md:flex-row items-center py-10 gap-4")
            h2(class="text-sm uppercase text-gray-800 font-bold") Filtrar Propiedades:

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categorias" class="text-sm w-24 uppercase text-gray-500 font-bold") Categorias 
                select(name="categorias" id="categorias" class="bg-white w-full flex-1 px-3 py-2 border border-gray-300 rounded-md shadow")
                    option(value="") - Seleccione - 
                    each categoria in categorias 
                        option(value=categoria.id)= categoria.name


            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="precios" class="text-sm w-24 uppercase text-gray-500 font-bold") Precios 
                select(name="precios" id="precios" class="bg-white w-full flex-1 px-3 py-2 border border-gray-300 rounded-md shadow")
                    option(value="") - Seleccione - 
                    each precio in precios 
                        option(value=precio.id)= precio.name

        div(id="mapa-inicio" class="h-[600px] mt-5")

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Casas en Venta 

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each casa in casas 

                    div(class="bg-white shadow rounded-lg")
                        img(class="object-cover h-72 w-full" src=`/uploads/${casa.image}` alt=`imagen casa ${casa.title}`)
                        div(class="p-5 space-y-2")

                            h3(class="text-2xl font-bold")= casa.title 
                            p(class="text-sm text-gray-600") Habitaciones: 
                                span(class="text-gray-800 font-bold")= casa.rooms

                            p(class="text-sm text-gray-600") WC: 
                                span(class="text-gray-800 font-bold")= casa.wc

                            p(class="text-sm text-gray-600") Precio: 
                                span(class="text-gray-800 font-bold")= casa.precio.name
                            
                            a(href=`/propiedad/${casa.id}` class="bg-indigo-600 w-full text-center block font-bold text-white p-2 uppercase rounded-lg") Ver Propiedad 

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Departamentos en Venta 

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each departamento in departamentos 

                    div(class="bg-white shadow rounded-lg")
                        img(class="object-cover h-72 w-full" src=`/uploads/${departamento.image}` alt=`imagen casa ${departamento.title}`)
                        div(class="p-5 space-y-2")

                            h3(class="text-2xl font-bold")= departamento.title 
                            p(class="text-sm text-gray-600") Habitaciones: 
                                span(class="text-gray-800 font-bold")= departamento.rooms

                            p(class="text-sm text-gray-600") WC: 
                                span(class="text-gray-800 font-bold")= departamento.wc

                            p(class="text-sm text-gray-600") Precio: 
                                span(class="text-gray-800 font-bold")= departamento.precio.name
                            
                            a(href=`/propiedad/${departamento.id}` class="bg-indigo-600 w-full text-center block font-bold text-white p-2 uppercase rounded-lg") Ver Propiedad 



block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js")