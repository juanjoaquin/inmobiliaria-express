extends ../layout/index

block contenido
    div 
        h1.text-4xl.mu-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina 

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/register" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold NOMBRE
                        input#name.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nombre" type="text" name="name" value= user ? user.name : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold EMAIL
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Email" type="email" name="email" value= user ? user.email : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold PASSWORD
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Password" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold REPETIR PASSWORD
                        input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite Password" type="password" name="repetir_password")      

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 rounded-lg py-2 text-white cursor-pointer" type="submit" value="Crear Cuenta")                            
                    
                    div.flex.items-center.justify-between
                        a(href="/auth/login") Iniciar sesión
                        a(href="/auth/forgot-password") Olvide mi contraseña 