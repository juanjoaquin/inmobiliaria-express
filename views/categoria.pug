extends ./layout/app

block contenido 

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10")= pagina

        if propiedades.length
            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in propiedades 

                    div(class="bg-white shadow rounded-lg")
                        img(class="object-cover h-72 w-full" src=`/uploads/${propiedad.image}` alt=`imagen casa ${propiedad.title}`)
                        div(class="p-5 space-y-2")

                            h3(class="text-2xl font-bold")= propiedad.title 
                            p(class="text-sm text-gray-600") Habitaciones: 
                                span(class="text-gray-800 font-bold")= propiedad.rooms

                            p(class="text-sm text-gray-600") WC: 
                                span(class="text-gray-800 font-bold")= propiedad.wc

                            p(class="text-sm text-gray-600") Precio: 
                                span(class="text-gray-800 font-bold")= propiedad.name
                            
                            a(href=`/propiedad/${propiedad.id}` class="bg-indigo-600 w-full text-center block font-bold text-white p-2 uppercase rounded-lg") Ver Propiedad 

        else 
            p(class="text-center text-gray-800 text-3xl py-10 font-bold") No se encontraron propiedades

