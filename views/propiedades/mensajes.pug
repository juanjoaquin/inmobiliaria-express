extends ../layout/admin

block contenido
    h2(class="text-2xl font-extrabold text-center my-10")= pagina

    a(href="/mis-propiedades" class="rounded py-2 px-10 bg-indigo-600 hover:bg-indigo-700 cursor-pointer text-sm text-white my-5 inline-block w-full md:w-auto" ) Volver atr√°s 

    div(class="mx-auto max-w-4xl bg-white shadow")

        //- pre= JSON.stringify(mensajes, undefined, 2)

        if mensajes.length 
            ul 
                each mensaje in mensajes 
                    li(class="border-gray-200 border-b p-5 space-y-4")
                        p(class="font-bold text-gray-800") Nombre: 
                            span(class="font-normal")= mensaje.user ? mensaje.user.name : 'Usuario desconocido'

                        p(class="font-bold text-gray-800") Mensaje: 
                            span(class="font-normal")= mensaje.mensaje

                        p(class="font-bold text-gray-400") Enviado: 
                            span(class="font-normal")= resetFecha(mensaje.createdAt)
        else 
            p(class="text-center text-gray-600 p-5") No hay mensajes