extends ../layout/app

block styles 
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido 

    div(class="py-5")
        h1(class="text-4xl my-10 font-extrabold text-center")= propiedad.title

        div 
            a(href="" class="font-bold text-gray-600 text-sm") Categoria: 
                span(class="font-normal")= propiedad.categoria.name

        div(class="mt-5 md:flex md:gap-4 md:items-start")
            div(class="md:w-2/3 bg-white shadow rounded-lg") 
                img(src=`/uploads/${propiedad.image}`, alt=`${propiedad.title}`)

                div(class="px-5 py-10 space-y-5")
                    p= propiedad.description 

                    h2(class="text-2xl leading-6 font-bold text-gray-900") Información Propiedad 
                    
                     div(class="grid grid-cols-1 md:grid-cols-2")
                        p(class="text-gray-600 font-bold text-xs") WC 
                            span(class="text-gray-800 block text-lg")= propiedad.wc   

                        p(class="text-gray-600 font-bold text-xs") Habitaciones 
                            span(class="text-gray-800 block text-lg")= propiedad.rooms

                        p(class="text-gray-600 font-bold text-xs") Calle 
                            span(class="text-gray-800 block text-lg")= propiedad.calle

                        p(class="text-gray-600 font-bold text-xs") Precio 
                            span(class="text-gray-800 block text-lg")= propiedad.precio.name

            div(class="md:w-1/3") 

                h3(class="text-center py-10 leading-6 text-2xl font-bold text-gray-900") Ubicación 

                div(class="h-96" id="mapa")
                    p(id="lat" class="hidden")= propiedad.lat
                    p(id="lng" class="hidden")= propiedad.lng

                div(class="p-5")
                    p(class="text-gray-600 font-bold text-xs") Dirección 
                        span(id="calle" class="text-gray-800 block text-lg")= propiedad.calle

                    if !esVendedor 

                            if enviado 
                                p(class="p-2 text-center bg-green-100 text-green-600 uppercase font-bold") Mensaje Enviado Correctamente

                            else if user

                                if errores 
                                    div(class="max-w-md mx-auto my-10")
                                        each error in errores 
                                            p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
                                
                                form(method="POST")
                                    input(type="hidden" name="_csrf" value= csrfToken) 

                                    div(class="space-y-5")
                                        label(for="mensaje") Mensaje 
                                        textarea(name="mensaje" id="mensaje" placeholder="Escribe el mensaje" class="w-full py-2 border border-gray-300 rounded-lg shadow" )  

                                        input(type="submit" value="Enviar Mensaje" class="bg-indigo-600 text-white font-bold uppercase text-sm w-full p-2 cursor-pointer")

                            else
                                div(class="flex justify-center gap-2 ")
                                    p Si quieres contactar al dueño
                                    a(href="/auth/register" class="text-indigo-600") necesitas registrarte
                                    p(class="text-gray-500") o
                                    a(href="/auth/login" class="text-indigo-600") iniciar sesión


block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mostrarMapa.js")